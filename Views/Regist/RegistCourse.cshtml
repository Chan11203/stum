@model IEnumerable<course>
@using StuMSystem.Models;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <h2 style="text-align: center; margin: 20px 0px 20px 0;">Regist Courses</h2>

    <style>
        .search-form {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .input-group {
            display: flex;
            align-items: center;
        }

        .short-input {
            width: 200px;
            height: 40px;
            border-radius: 4px 0 0 4px;
        }

        .input-group-append .btn-box {
            background-color: #007bff;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            border-radius: 0 4px 4px 0;
            font-size: 16px;
            cursor: pointer;
            height: 40px;
        }

            .input-group-append .btn-box:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container" style="text-align:center">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Lecturer Name</th>
                    <th>Day</th>
                    <th>Time</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.courseId</td>
                            <td>@item.courseName</td>
                            <td>@item.lecturerName</td>
                            <td>@item.day</td>
                            <td>@item.time</td>
                            <td> @item.courseId </td>
                            <td>
                                <button class="btn btn-success btn-sm join-button" data-id="@item.courseId">Join</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a href="/Regist/HomePage">HomePage</a>
    </div>


    <div class="modal" id="successModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Succeed</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>successfully registered</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="modalCloseButton">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.join-button').on('click', function () {
                var courseId = $(this).data('id');
                // Kiểm tra bảng enrollment
                $.ajax({
                    url: '/Regist/CheckEnrollment',
                    type: 'POST',
                    data: { courseId: courseId },
                    success: function (response) {
                        console.log(response);
                        if (response.success) {
                            $('#successModal').modal('show');
                            $('#modalCloseButton').on('click', function () {
                                $('#successModal').modal('hide');

                            });
                            //alert(response.message);
                        } else {
                            alert('You have already enrolled in this course.');
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('An error occurred while checking enrollment: ' + error);
                    }
                });
            });
        });
    </script>
</body>

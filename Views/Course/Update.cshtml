@model StuMSystem.Models.course

@{
    ViewBag.Title = "Update Course";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4" style="text-align:center;">@ViewBag.Title</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h4>Course</h4>
                        </div>
                        <div class="card-body">
                            @Html.HiddenFor(model => model.courseId)

                            <div class="mb-3 row">
                                @Html.LabelFor(model => model.courseName, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.courseName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.courseName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3 row">
                                @Html.LabelFor(model => model.lecturerName, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.lecturerName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.lecturerName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3 row">
                                @Html.LabelFor(model => model.day, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.day, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.day, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3 row">
                                @Html.LabelFor(model => model.time, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3 row">
                                @Html.LabelFor(model => model.location, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <div class="col-md-9 offset-md-3">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>

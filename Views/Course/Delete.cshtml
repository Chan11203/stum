@model StuMSystem.Models.course

@{
    ViewBag.Title = "Delete Course";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">@ViewBag.Title</h2>
        <div class="alert alert-warning" role="alert">
            <h3 class="alert-heading">Are you sure you want to delete this?</h3>
            <hr />
            <div class="row mb-3">
                <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.courseId)</strong></div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.courseId)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.courseName)</strong></div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.courseName)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.lecturerName)</strong></div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.lecturerName)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.day)</strong></div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.day)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.time)</strong></div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.time)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.location)</strong></div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.location)</div>
            </div>
        </div>
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            }
        </div>
    </div>
</body>
</html>

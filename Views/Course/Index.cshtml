@model IEnumerable<StuMSystem.Models.course>

@{
    ViewBag.Title = "Courses";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
    <style>
        .btn-edit {
            background-color: #ffc107;
            color: white;
        }

        .btn-details {
            background-color: #17a2b8;
            color: white;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

            .btn-edit:hover, .btn-details:hover, .btn-delete:hover {
                opacity: 0.8;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">@ViewBag.Title</h2>
        <div class="mb-3">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        </div>

        <form method="get" action="@Url.Action("Index")" class="form-inline mb-4">
            <div class="form-group me-2">
                <input type="text" name="searchString" class="form-control" placeholder="Search by course name" />
            </div>
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>

        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Lecturer Name</th>
                    <th>Day</th>
                    <th>Time</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.courseId</td>
                        <td>@item.courseName</td>
                        <td>@item.lecturerName</td>
                        <td>@item.day</td>
                        <td>@item.time</td>
                        <td>@item.location</td>
                        <td>
                            @Html.ActionLink("Update", "Update", new { id = item.courseId }, new { @class = "btn btn-edit btn-sm me-1" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.courseId }, new { @class = "btn btn-delete btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

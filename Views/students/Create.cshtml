@model StuMSystem.Models.student

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/scss/StyleSheet1.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body style="background-color:midnightblue;">
    <div class="header" style="background-color:midnightblue;">
        <div class="container" style="text-align: center;">
            <img class="img-fluid" src="~/Content/img/StuM (10).png" style=" margin: 20px 0px; " />
            <p style="margin-bottom:20px; color:#fff;"><i>*Note: Administrators create student accounts with the necessary details to ensure accurate student records.</i></p>
        </div>
    </div>
    <div class="container mt-3" style="background-color:midnightblue; display:flex; justify-content:center ">
        <form method="post" asp-action="Create" class="createForm">
            <h1 style="text-align:center; margin-bottom:20px;">Create Student</h1>
            <div class="form-group">
                <label for="userId" class="control-label">User ID</label>
                <input type="number" id="userId" name="userId" class="form-control" />
            </div>

            <div class="form-group">
                <label for="studentId" class="control-label">Student ID</label>
                <input type="text" id="studentId" name="studentId" class="form-control" maxlength="30" />
            </div>

            <div class="form-group">
                <label for="studentName" class="control-label">Student Name</label>
                <input type="text" id="studentName" name="studentName" class="form-control" maxlength="128" />
            </div>
            <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <input type="text" id="password" name="password" class="form-control" maxlength="128" />
            </div>
            <div class="form-group">
                <label for="gender" class="control-label">Gender</label>
                <div class="d-flex align-items-center">
                    <div style="padding-right:10px;">
                        <input type="radio" id="gender_male" name="gender" value="Male">
                        <label for="gender_male" class="mr-3">Male</label>
                    </div>
                    <div>
                        <input type="radio" id="gender_female" name="gender" value="Female">
                        <label for="gender_female">Female</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" maxlength="64" />
            </div>

            <div class="form-group">
                <label for="address" class="control-label">Address</label>
                <input type="text" id="address" name="address" class="form-control" maxlength="128" />
            </div>

            <div class="form-group">
                <label for="tel" class="control-label">Telephone</label>
                <input type="tel" id="tel" name="tel" class="form-control" maxlength="20" />
            </div>

            <div class="form-group">
                <label for="major" class="control-label">Major</label>
                <input type="text" id="major" name="major" class="form-control" maxlength="64" />
            </div>

            <button type="submit" class="btn btn-primary" style="justify-self: center; margin-bottom: 20px; width: 100px; height: 40px;">Create</button>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>


@model StuMSystem.Models.student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/scss/StyleSheet1.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body style="background-color:midnightblue;">
    <div class="header" style="background-color:midnightblue;">
        <div class="container" style="text-align: center;">
            <img class="img-fluid" src="~/Content/img/StuM (10).png" style=" margin: 20px 0px; " />
            <p style="margin-bottom:20px; color:#fff;"><i>*Note: Administrators are responsible for deleting student records accurately.</i></p>
        </div>
    </div>
    <div class="container mt-3" style="background-color:midnightblue; display:flex; justify-content:center">
        @using (Html.BeginForm("Delete", "students", FormMethod.Post, new { @class = "deleteForm", style = "border-radius:40px" }))
        {
            @Html.AntiForgeryToken()
            <h1 style="text-align:center; margin-bottom:20px; color:white;">Delete Student</h1>

            <div class="form-group text-center">
                <p style="color:white;">Are you sure you want to delete this student?</p>
                <h3 style="color:white;">@Model.studentName</h3>
                <div class="col-md-offset-2 col-md-10" style="width: 100%; margin-top:20px;">
                    <input type="submit" value="Delete" class="btn btn-danger" style="width: 100px; height: 40px;" />
                    <a href="@Url.Action("Index", "students")" class="btn btn-secondary" style="width: 100px; height: 40px; margin-left: 20px;">Cancel</a>
                </div>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
